<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:orientation="vertical">
		<TextView android:text="以下三项至少填写一项" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		<TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:stretchColumns="1">
			<TableRow>
				<TextView android:text="标题包含:" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
				<EditText android:id="@+id/t1" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
			</TableRow>
			<TableRow>
				<TextView android:text="标题不含:" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
				<EditText android:id="@+id/t3" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
			</TableRow>
			<TableRow>
				<TextView android:text="作者:" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
				<EditText android:id="@+id/author" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
			</TableRow>
		</TableLayout>
	</LinearLayout>
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:orientation="vertical">
		<TextView android:text="以下选填" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		<TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
			<TableRow>
				<CheckBox android:id="@+id/mark" android:text="文章标记"
					android:layout_width="wrap_content" android:layout_height="wrap_content"/>
				<CheckBox android:id="@+id/nore" android:text="不含回文"
					android:layout_width="wrap_content" android:layout_height="wrap_content"/>
				<TextView android:layout_width="fill_parent" android:layout_height="fill_parent"/>					
			</TableRow>
			<TableRow>
				<TextView android:text="时间范围:" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
				<EditText android:id="@+id/limit" android:text="7" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
				<TextView android:text="天以内(最多30天)" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
			</TableRow>
		</TableLayout>
	</LinearLayout>	

</LinearLayout>
