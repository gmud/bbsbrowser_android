<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:orientation="vertical">
		<TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:stretchColumns="1">
			<TableRow>
				<TextView android:text="账户:" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
				<EditText android:id="@+id/wbUser" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
			</TableRow>
			<TableRow>
				<TextView android:text="密码:" 
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
				<EditText android:id="@+id/wbPassword" android:password="true"
					android:layout_width="fill_parent" android:layout_height="fill_parent"/>
			</TableRow>
		</TableLayout>
	</LinearLayout>
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:orientation="vertical">
		<TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
			<CheckBox android:id="@+id/wbRecordPassword" android:text="记住用户名及密码" android:checked="true"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		</TableLayout>
	</LinearLayout>	

</LinearLayout>
