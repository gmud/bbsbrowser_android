<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:orientation="vertical">
		<TextView android:id="@+id/wbLabel" android:text="请输入BBS帖子的标题" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		<Spinner android:id="@+id/wbBoard" android:visibility="gone"
			android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		<EditText android:id="@+id/wbTitle" android:text="[转载]From新浪微博" 
			android:layout_width="fill_parent" android:layout_height="fill_parent"/>
		<CheckBox android:id="@+id/wbPostRetweet" android:text="包括原帖(灰色字体内容)" android:checked="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<CheckBox android:id="@+id/wbPostSource" android:text="包括正文(黑色字体内容)" android:checked="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<CheckBox android:id="@+id/wbPostImage" android:text="包括图片" android:checked="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	
</LinearLayout>
</LinearLayout>
