<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/board_name_selector" 
		android:orientation="horizontal" android:layout_weight="1" android:paddingRight="6dp">
		<TextView android:id="@+id/boardItemType" android:text="[系统]" android:textColor="@color/board_name_text"
			android:layout_width="50dp" android:layout_height="wrap_content" android:gravity="left|center_vertical"/>
		<TextView android:id="@+id/boardItemName" android:text="Android" android:textColor="@color/board_name_text" android:textSize="17sp" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<TextView android:id="@+id/boardItemCh" android:layout_weight="1" android:text="安卓" android:textColor="@color/board_name_text"
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="right|center_vertical"/>
		
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:background="@drawable/board_master_selector"
		android:orientation="horizontal" android:layout_weight="1" android:paddingRight="6dp">
		<TextView android:id="@+id/boardItemMaster" android:text="leeon peddy leeon1 leeon2" android:textColor="@color/board_master_text"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:drawableLeft="@drawable/filenew" android:drawablePadding="5dp"/>
		<TextView android:id="@+id/boardItemDocNumber" android:text="1234"  android:textColor="@color/board_master_text"
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="right"/>
	</LinearLayout>

</LinearLayout>
