<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/top10_author_selector"
		android:orientation="horizontal" android:layout_weight="1" android:paddingRight="6dp">
		<TextView android:id="@+id/mailItemNumber" android:text="1234" android:textColor="@color/welcome_text"
			android:layout_width="80dp" android:layout_height="wrap_content" android:textSize="26sp"/>
		<TextView android:id="@+id/mailItemSender" android:text="leeon" android:textColor="@color/welcome_text"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="26sp"/>	
		<TextView android:id="@+id/mailItemDate" android:layout_weight="1" android:text="2010-12-23 12:23:33" android:textColor="@color/welcome_text"
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="right" android:textSize="26sp"/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/top10_title_selector" 
		android:orientation="horizontal" android:layout_weight="1" android:paddingRight="6dp">
		<!-- TextView android:id="@+id/mailItemStatus" android:text="+" android:textColor="@color/welcome_text1"
			android:layout_width="10dp" android:layout_height="wrap_content" android:gravity="center_vertical" android:textSize="16sp"/ -->
		<TextView android:id="@+id/mailItemTitle" android:layout_weight="1" android:text="测试" android:textColor="@color/welcome_text1"
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="26sp"
			android:drawableLeft="@drawable/mail_generic" android:drawablePadding="5dp"/>
	</LinearLayout>

</LinearLayout>
