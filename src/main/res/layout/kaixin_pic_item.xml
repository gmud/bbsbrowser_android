<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/white"
  android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical"
  android:paddingTop="10dp" android:paddingBottom="10dp">
 
	<TextView android:id="@+id/picInfo" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:text="(1/1)" android:textColor="@android:color/black" android:paddingLeft="20dp"/>
	<ImageView android:id="@+id/picImage" android:src="@android:drawable/gallery_thumb" android:adjustViewBounds="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp"/>
</LinearLayout>
